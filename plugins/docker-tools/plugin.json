{
  "id": "cognia-docker-tools",
  "name": "Docker Tools",
  "version": "1.1.0",
  "description": "Docker container management for AI agents â€” list, run, stop, inspect containers and images",
  "author": { "name": "Cognia Team", "email": "team@cognia.dev" },
  "license": "MIT",
  "type": "frontend",
  "main": "dist/index.js",
  "icon": "container",
  "keywords": ["docker", "container", "devops", "management"],
  "capabilities": ["tools", "commands"],
  "permissions": ["shell:execute"],
  "activationEvents": [
    "onAgentTool:docker_ps",
    "onAgentTool:docker_images",
    "onAgentTool:docker_logs",
    "onAgentTool:docker_exec",
    "onAgentTool:docker_run",
    "onAgentTool:docker_stop",
    "onAgentTool:docker_rm",
    "onAgentTool:docker_stats",
    "onAgentTool:docker_inspect",
    "onCommand:docker-tools.*"
  ],
  "tools": [
    { "name": "docker_ps", "description": "List running containers" },
    { "name": "docker_images", "description": "List Docker images" },
    { "name": "docker_logs", "description": "View container logs" },
    { "name": "docker_exec", "description": "Execute command in container", "requiresApproval": true },
    { "name": "docker_run", "description": "Run a new container from an image", "requiresApproval": true },
    { "name": "docker_stop", "description": "Stop running containers", "requiresApproval": true },
    { "name": "docker_rm", "description": "Remove containers", "requiresApproval": true },
    { "name": "docker_stats", "description": "Show container resource usage" },
    { "name": "docker_inspect", "description": "Show detailed container/image info" }
  ],
  "commands": [
    {
      "id": "docker-tools.list-containers",
      "name": "List Docker Containers",
      "description": "Show all Docker containers",
      "icon": "container"
    },
    {
      "id": "docker-tools.system-info",
      "name": "Docker System Info",
      "description": "Show Docker system information",
      "icon": "info"
    },
    {
      "id": "docker-tools.disk-usage",
      "name": "Docker Disk Usage",
      "description": "Show Docker disk usage",
      "icon": "hard-drive"
    }
  ],
  "configSchema": {
    "type": "object",
    "properties": {
      "maxLogLines": {
        "type": "number",
        "title": "Max Log Lines",
        "description": "Maximum number of log lines to return",
        "default": 100,
        "minimum": 10,
        "maximum": 5000
      },
      "defaultTimeout": {
        "type": "number",
        "title": "Default Timeout",
        "description": "Default timeout for Docker commands in milliseconds",
        "default": 60000,
        "minimum": 5000,
        "maximum": 300000
      }
    }
  },
  "defaultConfig": {
    "maxLogLines": 100,
    "defaultTimeout": 60000
  },
  "minAppVersion": "2.0.0"
}
