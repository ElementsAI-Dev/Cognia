{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Cognia",
  "version": "0.1.0",
  "identifier": "com.elementsai.cognia",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cross-env TAURI=true pnpm dev -p 3000",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Cognia",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "fullscreen": false,
        "decorations": false,
        "visible": false,
        "center": true,
        "shadow": true
      },
      {
        "label": "splashscreen",
        "url": "splashscreen",
        "width": 400,
        "height": 300,
        "resizable": false,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      },
      {
        "label": "selection-toolbar",
        "title": "",
        "url": "selection-toolbar",
        "width": 560,
        "height": 400,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "focus": false,
        "shadow": false
      },
      {
        "label": "chat-widget",
        "title": "Cognia Assistant",
        "url": "chat-widget",
        "width": 420,
        "height": 600,
        "minWidth": 320,
        "minHeight": 400,
        "visible": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": true,
        "center": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {}
}
